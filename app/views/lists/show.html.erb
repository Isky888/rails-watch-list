<h1><%=@list.name%></h1>
<% @list.bookmarks.each do |bookmark| %>
<div class="card-product">
  <img src="<%=bookmark.movie.poster_url%>"/>
  <div class="card-product-infos">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.rating %></p>
    <p><%= bookmark.comment%></p>
    <p><%= link_to 'Click for full details', movie_path(bookmark.movie) %></p>
  </div>
  <div>
    <%= link_to 'Delete',
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
    class: "btn btn-dark"
    %>
  </div>
</div>
<% end %>

<div class="button-container d-flex">
  <form>
    <%=link_to "Create a new bookmark", new_list_bookmark_path(@list), class: "btn btn-dark"%>
  </form>
  <form>
    <input class="btn btn-dark" type="button" value="Back to list" onclick="history.back()">
  </form>

</div>
