<h1>Movies</h1>
<% @movies.each do |movie|  %>
<div class="card-product">
  <img src="<%=movie.poster_url%>"/>
  <div class="card-product-infos">
    <h2><%=movie.title %></h2>
    <p><%= movie.rating %></p>
    <p><%= link_to 'Click for full details', movie_path(movie) %></p>
  </div>
</div>
<% end%>
